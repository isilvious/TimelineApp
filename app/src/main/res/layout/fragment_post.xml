<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isaac.timeline.PostFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_view_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USERNAME:"
                android:textStyle="bold"
                android:theme="@style/LargerBlackText" />

            <ImageButton
                android:id="@+id/imbtn_edit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:onClick="edit"
                android:padding="8dp"
                android:src="@mipmap/ic_edit" />
        </LinearLayout>

        <TextView
            android:id="@+id/post_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATE:" />

        <TextView
            android:id="@+id/post_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Content"
            android:textSize="20dp"
            android:theme="@style/SmallerBlackText" />

    </LinearLayout>

</FrameLayout>
